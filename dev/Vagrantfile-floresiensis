# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "techchad2022/ubuntu2204"
  config.vm.network "public_network", type: "dhcp"
  #config.vm.network "public_network", ip: "192.168.0.16", :mac => "0800271CB87E"
  config.vm.hostname = "floresiensis"
  config.vm.provider "vb" do |vb|
     vb.gui = false
     vb.name = "floresiensis"
     vb.memory = "20484"
  end
  config.vm.provision "shell", inline: <<-SHELL
    useradd -m colleymj
    cat ~/.ssh/id_rsa-dolmen.pub >> /home/colleymj/.ssh/authorized_keys
    echo "192.168.0.5  denisova" >> /etc/hosts
    echo "192.168.0.16 rudolfensis" >> /etc/hosts
    echo "192.168.0.17 ergaster" >> /etc/hosts
  SHELL
end
