Vagrant.configure("2") do |config|
  config.vm.box = "techchad2022/ubuntu2204"
  config.vm.network "public_network", ip: "192.168.0.17", :mac => "0800275D14DB"

  config.vm.hostname = "ergaster"

  config.vm.provider "vb" do |vb|
     vb.gui = false
     vb.name = "ergaster"
     vb.memory = "20484"
  end
  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    SHELL
end

